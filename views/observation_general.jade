extends observations
block observation_content
		table(style="width:100%;font-size:16px")
			if data.Observations
				tr(style="height:25px")
					td
						span Number of&nbsp;
						a(href='/Casegroupstudy/#{data.HGNCSymbol}/#{data.ORDOID}' style="text-decoration:none") Case Group Study
						if data.Observations.CaseStudy
							span &nbsp;data entered: #{data.Observations.CaseStudy.length}
						else
							span &nbsp;data entered: 0
				tr(style="height:25px")
					td
						span Number of&nbsp;
						a(href='#' style="text-decoration:none;color:grey") Case Control Study
						if data.Observations.CaseControlStudy
							span &nbsp;data entered: #{data.Observations.CaseControlStudy.length}
						else
							span &nbsp;data entered: 0
				tr(style="height:25px")
					td
						span Number of&nbsp;
						a(href="/Functionaldataanalysis/#{data.HGNCSymbol}/#{data.ORDOID}" style="text-decoration:none") Functional Data Analysis
						if data.Observations.FunctionalData
							span &nbsp;data entered: #{data.Observations.FunctionalData.length}
						else
							span &nbsp;data entered: 0
			else
				tr(style="height:25px")
					td
						span Number of Case Group Study: 0&nbsp;&nbsp;&nbsp;
						a(href='/Casegroupstudy/Addnew/#{data.HGNCSymbol}/#{data.ORDOID}') Add a new case group
				tr(style="height:25px")
					td Number of Case Control Study: 0
				tr(style="height:25px")
					td
						span Number of Functional Data Analysis: 0&nbsp;&nbsp;&nbsp;
						a(href='/Functionaldataanalysis/Addnew/#{data.HGNCSymbol}/#{data.ORDOID}') Add a new functional data analysis
